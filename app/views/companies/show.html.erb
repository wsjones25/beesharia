<div class="more-info-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path('agriculture.jpg') %>');">


  <div class="top-info">
    <div class="company-category">
      <h3><%= @company.business_category %></h3>
      <%= image_tag 'blue_right_arrow.png', width: 28, height: 30, class: "blue-arrow" %>
      <h3 class="business-category"><%= @company.loan_type %> loan</h3>
    </div>
    <div class="invest-info">
      <div class="days-left">
        <% if ((@company.created_at.to_date + 30 - Date.today).to_i) == 0 %>
          <h5>The campaign has finished!</h5>
        <% else %>
          <h5><%= ((@company.created_at.to_date + 30 - Date.today).to_i) %> days left</h5>
        <% end %>
      </div>
      <% if !current_user.borrower  %>
        <div class="buttons_company_show">
          <%= render 'investments/form_pledge', company: @company, investment: @investment %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="key-info-container">
  <div class="progress" id="progress-more-info">
    <% total_funded = @company.investments.map(&:credit_amount).sum %>
    <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:<%= total_funded.fdiv(@company.required_funds) * 100 %>%">
     <span><%= (total_funded.fdiv(@company.required_funds) * 100).round(0) %>% funded</span>
    </div>
  </div>

  <div class="key-info-tags">
    <% if @company.risk_score == "High Risk" %>
      <span class="tag" id="red"><%= @company.risk_score %></span>
    <% elsif @company.risk_score == "Medium Risk" %>
      <span class="tag" id="orange"><%= @company.risk_score %></span>
    <% else %>
      <span class="tag" id="green"><%= @company.risk_score %></span>
    <% end %>
    <span class="tag"><%= @company.loan_rate %>% return</span>
    <span class="tag"><%= @company.borrowing_length %> month term</span>
    <span class="tag">£<%= number_with_delimiter(@company.required_funds, delimiter: ',') %> target</span>
    <span class="tag"><%= @company.investments.map(&:user_id).count %> investors</span>
  </div>
</div>

<div class="wrapper_company_show">



  <div class="container_company_show">

    <div class="company-border"><h1><%= @company.company_name %></h1></div>
    <div class="company-border"><h1><%= @company.company_number %></h1></div>
    <div class="company_details">
      <div class="showbox">
        <!-- general info  -->
        <div class="sub-info">
          <p class="subheading"> <strong> General information </strong></p>
          <p><strong> Address: </strong> <%= @company.office_address %></p>
          <p><strong> Directors' Names:</strong> <%= @company.director_names %></p>
          <p> <strong> Business Category:</strong> <%= @company.business_category %></p>
          <p> <strong> Years credit history:</strong> <%= @company.years_credit_history %></p>
        </div>
        <!-- Borrowing requirements  -->
        <div class="sub-info">
          <p class="subheading"> <strong> Borrowing requirements </strong></p>
          <p><strong> Required funds:  </strong> £<%= number_with_delimiter(@company.required_funds, delimiter: ',') %> </p>
          <p><strong> Length:</strong> <%= @company.borrowing_length %> years</p>
          <p><strong> Borrowing type:</strong> <%= @company.loan_type %></p>
        </div>
        <!-- financials  -->
        <div class="sub-info">
          <p class="subheading"> <strong> Key financials </strong></p>
          <p><strong> Last year EBIT: </strong> £<%= @company.last_year_ebit %> </p>
          <p><strong>Last year interest:  </strong> £<%= @company.last_year_interest %>  </p>
          <p><strong>Last year debt:  </strong> £<%= @company.last_year_debt %>  </p>
          <p><strong>Last year assets:  </strong> £ <%= @company.last_year_assets %> </p>
        </div>
        <% unless @company.doc_accounts.blank? %>
          <iframe src="http://docs.google.com/gview?url=<%= cl_image_path @company.doc_accounts %>&embedded=true", width="300px", height="400px"></iframe>
        <% end %>
      </div>

    </div>
  </div>
</div>

